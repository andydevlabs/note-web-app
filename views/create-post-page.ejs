<!DOCTYPE html>
<html lang="en">
    <%- include("includes/head") %>
    <body>
        <header>
            <h2>
                <a href="/">Note App</a>
            </h2>
        </header>

        <main>
            <form action="/create-post" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <% postCreationValidationError.forEach(error => { %>
                <p class="notice"><%= error %></p>
                <% }); %>

                <fieldset>
                    <legend>Create a new post</legend>
                    <label for="post_title"><small>Title</small></label>
                    <input
                        type="text"
                        id="post_title"
                        name="post_title"
                        autocomplete="off"
                        value="<%= locals.post_title || '' %>"
                    />
                    <label for="post_content"><small>Share your thoughts</small></label>
                    <textarea
                        type="textarea"
                        id="post_content"
                        name="post_content"
                        autocomplete="off"
                    ></textarea>
                    <br />
                    <button type="submit">Post</button>
                </fieldset>
            </form>
        </main>

        <%- include("includes/footer") %>
    </body>
</html>
