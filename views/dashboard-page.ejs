<!DOCTYPE html>
<html lang="en">
    <%- include("includes/head") %>
    <body>
        <header>
            <h2>
                <a href="/">Note App</a>
            </h2>
            <nav>
                <% if (authenticationToken) { %>
                <a href="/create-post">Create Post</a>
                <a href="/logout">Log out</a>
                <% } else { %>
                <a href="/login">Sign in</a>
                <% } %>
            </nav>
        </header>
        <main>
            <h3>Your post</h3>
            <% posts.forEach(post => { %>
            <fieldset>
                <legend><%= post.post_title %></legend>
                <p><%= post.post_content %></p>
            </fieldset>
            <% }); %>
        </main>

        <%- include("includes/footer") %>
    </body>
</html>
